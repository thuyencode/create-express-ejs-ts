          <label>
            <h5>Message</h5>
            <input type="text" name="message" placeholder="Nvidia, FUCK YOU!" />
          </label>
        </fieldset>

        <button type="submit">Send new message</button>
      </form>
    </main>

    <%- include('components/footer.ejs') %>
