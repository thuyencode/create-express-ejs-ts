<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('components/head.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@2.1.0/dist/iconify-icon.min.js"></script>
  </head>
  <body class="container">
    <header>Mini Message Board</header>

    <main>
      <form aria-readonly="true" aria-disabled="true">
        <label>
          <h5>
            <span style="font-weight: 400">By</span>
            First name
          </h5>
          <input
            type="text"
            name="message"
            placeholder="Message"
            aria-label="Message"
            aria-describedby="message-date"
            readonly
          />
          <small id="message-date"><%= new Date().toLocaleString() %></small>
        </label>
      </form>
    </main>

    <%- include('components/footer.ejs') %>
  </body>
</html>
