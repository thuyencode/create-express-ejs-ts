{
  "name": "mini-message-board-the-odin-project",
  "version": "1.0.0",
  "description": "Project: Mini Message Board | The Odin Project",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --minify --packages=external --platform=node --outfile=dist/index.js --format=esm",
    "dev": "dotenvx run -f .env.development.local -- tsx watch src/index.ts",
    "start": "dotenvx run -f .env.production -- node dist/index.js",
    "lint": "tsc ; eslint ./src",
    "populate-db:dev": "dotenvx run -f .env.development.local -- tsx scripts/populate_db.ts",
    "populate-db:prod": "dotenvx run -f .env.production -- tsx scripts/populate_db.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thuyencode/mini-message-board-the-odin-project.git"
  },
  "keywords": [
    "nodejs",
    "typescript"
  ],
  "author": "Thuyen Code",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thuyencode/mini-message-board-the-odin-project/issues"
  },
  "homepage": "https://github.com/thuyencode/mini-message-board-the-odin-project#readme",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/compression": "^1.7.5",
    "@types/ejs": "^3.1.5",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.2",
    "@types/pg": "^8.11.6",
    "esbuild": "^0.23.0",
    "eslint": "^9.8.0",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.6.4",
    "compression": "^1.7.4",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "http-status-ts": "^2.0.1",
    "pg": "^8.12.0",
    "valibot": "^0.37.0"
  }
}
